{
    "name": "robo-package/core",
    "type": "library",
    "license": "MIT",
    "description": "The Robo Package framework helps build sets of reusable commands.",
    "minimum-stability": "stable",
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "authors": [
        {
            "name": "Travis Tomka",
            "email": "underoathosx@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "consolidation/robo": "^1.4 || ^2 || ^3 || ^4",
        "kcs/class-finder": "^0.5",
        "mtdowling/jmespath.php": "^2.7",
        "symfony/string": "^5.0 || ^6.0",
        "symfony/yaml": "^5.0 || ^6.0"
    },
    "require-dev":  {
        "squizlabs/php_codesniffer": "^3.5",
        "phpstan/extension-installer": "^1.3",
        "phpstan/phpstan-strict-rules": "^1.5",
        "phpstan/phpstan-deprecation-rules": "^1.1",
        "phpcompatibility/php-compatibility": "^9.3",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "RoboPackage\\Core\\": "src/"
        }
    }
}
